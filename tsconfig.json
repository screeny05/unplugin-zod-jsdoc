{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*d.ts"],
  "exclude": ["node_modules", "dist", "test/fixtures"]
}
